<div class="flyntComponent" is="flynt-accordion-default">
  <div class="container">
    <div class="content">
      <div class="grid-header">
        <div>#</div>
        <div>Title</div>
        <div>Project</div>
        <div>Credit</div>
        <div>Year</div>
      </div>
      <ul class="accordion">
        {% for panel in accordionPanels %}
          <li class="panel">
            <div class="panel-trigger" type="button" aria-expanded="false" aria-controls="content-{{ loop.index }}">
              <div>{{ panel.panelId|e }}</div>
              <div>{{ panel.panelTitle|e }}</div>
              <div>{{ panel.panelProject|e }}</div>
              <div>{{ panel.panelCredit|e }}</div>
              <div>{{ panel.panelYear|e }}</div>
            </div>
            <div class="panel-content" aria-hidden="true" id="content-{{ loop.index }}">
              <div class="panel-inner">
                <div></div>
                <div>{{ panel.panelContentInfo|e('wp_kses_post') }}</div>
                <div>{{ panel.panelContentDescription|e('wp_kses_post') }}</div>
                <div>{{ panel.panelContentGallery|e('wp_kses_post') }}</div>
                <div></div>
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
